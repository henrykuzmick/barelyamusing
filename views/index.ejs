<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
    <title><%= title %></title>
  </head>
  <body>
    <div class="maincontainer">
      <% include ./partials/header %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-12 col-md-8">
            <h1>Latest</h1>
            <% latest.forEach((comic) => { %>
              <a href="comics/<%= comic.url %>" class="thumb thumb-fullwidth thumb-frame">
                <div class="imghold">
                  <img src="<%= comic.long %>" />
                </div>
              </a>
            <% }) %>
            <br />
            <h1>Random</h1>
            <% random.forEach((comic) => { %>
              <div class="col-xs-6 col-sm-3 p5">
                <a href="comics/<%= comic.url %>" class="thumb thumb-fullwidth thumb-frame">
                  <div class="imghold">
                    <img src="<%= comic.thumb %>" />
                  </div>
                </a>
              </div>
            <% }) %>
          </div>
          <div class="col-xs-12 col-md-4 lp0">
            <div class="hidden-xs hidden-sm">
              <h1>Social</h1>
              <div class="fb-page" data-href="https://www.facebook.com/barelyamusing/" data-small-header="false" data-width="312" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/barelyamusing/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/barelyamusing/">Barely Amusing</a></blockquote></div>
              <br /><br />
              <a href="https://twitter.com/BarelyAmusing" data-size="large" class="twitter-follow-button" data-show-count="false">Follow @BarelyAmusing</a><script async src="//platform.twitter.com/widgets.js" charSet="utf-8"></script>
            </div>
            <h1>Favorites</h1>
            <% comics.forEach((comic) => { if(comic.favorite) {%>
              <div class="col-xs-6 col-sm-3 col-md-6 p5">
                <a href="comics/<%= comic.url %>" class="thumb thumb-fullwidth thumb-frame">
                  <div class="imghold">
                    <img src="<%= comic.thumb %>" />
                  </div>
                </a>
              </div>
            <% }}) %>
          </div>
        </div>
      </div>
      <% include ./partials/footer %>
    </div>
    <%# facebook stuff%>
    <script>
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.8&appId=1586773254968939";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>
    <%# twitter stuff%>
    <script>
      window.twttr = (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
          t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function(f) {
          t._e.push(f);
        };
        return t;
      }(document, "script", "twitter-wjs"));
    </script>
    <% include ./partials/scripts %>
  </body>
</html>
