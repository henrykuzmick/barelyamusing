<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
    <title><%= `Barely Amusing - ${comic.title}` %></title>
  </head>
  <body>
    <div class="maincontainer">
      <% include ./partials/header %>
      <div class="comicPage">
        <div class="comicHolder">
          <h1><%= comic.title %></h1>
          <img src="/<%= comic.main %>" />
        </div>
        <% if(prev !== null) { %>
          <div class="left">
            <a href="/comics/<%= prev.url %>" class="thumb thumb-frame">
              <div class="imghold">
                <img src="/<%= prev.thumb %>" />
              </div>
            </a>
          </div>
          <% } %>
        <% if(next !== null) { %>
          <div class="right">
            <a href="/comics/<%= next.url %>" class="thumb thumb-frame">
              <div class="imghold">
                <img src="/<%= next.thumb %>" />
              </div>
            </a>
          </div>
        <% } %>
        <div class="buttons">
          <% if(prev !== null) { %>
            <a href="/comics/<%= prev.url %>">
              <i class="fa fa-arrow-left" aria-hidden="true"></i>
            </a>
          <% } %>
          <a href="/comics/random"><i class="fa fa-refresh" aria-hidden="true"></i></a>
          <% if(next !== null) { %>
            <a href="/comics/<%= next.url %>">
              <i class="fa fa-arrow-right" aria-hidden="true"></i>
            </a>
          <% } %>
          <div class="social">
            <p>Sharing is carring.</p>
            <a class="fb" href="">
              <i class="fa fa-facebook-square" aria-hidden="true"></i>
            </a>
            <a class="tw" href="">
              <i class="fa fa-twitter-square" aria-hidden="true"></i>
            </a>
            <a class="rd" href="">
              <i class="fa fa-reddit-square" aria-hidden="true"></i>
            </a>
            <a class="pn" href="">
              <i class="fa fa-pinterest-square" aria-hidden="true"></i>
            </a>
            <a class="gp" href="">
              <i class="fa fa-google-plus-square" aria-hidden="true"></i>
            </a>
            <a class="ln" href="">
              <i class="fa fa-linkedin-square" aria-hidden="true"></i>
            </a>
            <a class="em" href="">
              <i class="fa fa-envelope-square" aria-hidden="true"></i>
            </a>
          </div>

        </div>
        <div class="bottom">
          <% if(comic.comment !== null) { %>
            <div class="comment">
              <h4>Authors comment</h4>
              <p><%= comic.comment %></p>
            </div>
          <% } %>
          <div id="disqus_thread"></div>
        </div>
      </div>
    </div>
    <%# disqus stuff%>
    <script>
      var disqus_config = function () {
        this.page.url = 'http://www.barelyamusing.com/comics/'+comic.url;
        this.page.identifier = comic.url;
      };
      (function() {
        var d = document, s = d.createElement('script');

        s.src = '//barelyamusing.disqus.com/embed.js';

        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
      })();
    </script>
    <% include ./partials/scripts %>
  </body>
</html>
